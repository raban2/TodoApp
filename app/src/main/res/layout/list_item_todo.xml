<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    android:layout_marginTop="100dp"

    android:orientation="vertical">

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="2sp"
        android:background="#6ab344"
        android:paddingTop="10dp"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="#6ab344"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/cardview_default_radius"/>

    <TextView
        android:id="@+id/list_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0sp"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        android:layout_weight="1"
        android:background="#6ab344"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--For Priority  tasks-->
    <TextView
        android:id="@+id/list_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        android:layout_weight="1"
        android:background="#6ab344"
        android:baselineAligned="false"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@color/color_medium_priority"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--    For the Status of the Task-->
    <TextView
        android:id="@+id/list_is_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        android:layout_weight="1"
        android:background="#6ab344"
        android:baselineAligned="false"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>